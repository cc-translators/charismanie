% Set index
\newcommand{\chindex}{%
  % Restore normal chapters
  \let\chapter\oldchapter
  % Appendix
  \ifpdf
    \cohead[]{\textls[100]{\textsc{\indextitle}}}
  \fi
  \renewcommand{\chapstyle}{\centering}
  \renewcommand{\chapheadstyle}{\scshape\Huge}
  \printindex
}


